{
  "extends": [
    "tslint-config-blvd/react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-shadowed-variable": false,
    "no-empty": false,
    "function-name": false,
    "no-unnecessary-initializer": true,
    "object-shorthand-properties-first": false,
    "no-namespace": false,
    "prefer-array-literal": false
  }
}
